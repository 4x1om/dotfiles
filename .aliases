#!/bin/bash

shopt -s expand_aliases

# NOTE: Putting a backslash before the command name disables any aliases.
# See https://stackoverflow.com/a/7716048

# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='\ls -F --color=auto'
    #alias dir='dir --color=auto'
    #alias vdir='vdir --color=auto'

    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# -R: Allow ANSI coloring
alias less='less -R'

# colored GCC warnings and errors
#export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# -A: List all (hidden files)
alias la='ls -A'
# -l: Long listing format
alias ll='ls -Al'
# -C: List entries by columns
alias l='ls -C'

alias cp='cp -r'
alias rm='rm -r'

# ssh commands
alias scp='scp -r'
alias tunnel3000='ssh -o ServerAliveInterval=60 -L 3000:localhost:3000'

# trash-cli
# alias tra='trash-put'
# alias bshow='trash-list'
# alias restore='trash-restore'
# alias bempty='trash-empty'

# python commands
alias python=python3
alias p3=python3
alias p3i="python3 -i"

# Usage: echo plaintext | rot13
alias rot13="tr 'A-Za-z' 'N-ZA-Mn-za-m'"
